@model IEnumerable<Commitee.Models.CommiteeProgramme>

@{
    ViewBag.Title = "Index";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@*Commitee Programmes*@</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Create", "CommiteeProgrammes")" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="New Program">
                            <i class="fa fa-plus"></i>
                            <span>
                                <strong>New Program</strong>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.programmeName)
                            </th>
                            <th class="hidden-xs hidden-sm">
                                @Html.DisplayNameFor(model => model.programmeDate)
                            </th>
                            <th class="hidden-xs">
                                @Html.DisplayNameFor(model => model.programmeStatus)
                            </th>
                            <th> Actions</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href='@Url.Action("ListItems", "CommiteeItems", new { id = item.id })'> <strong> @item.programmeName</strong></a>
                                </td>
                                <td class="hidden-xs hidden-sm">
                                    @Html.DisplayFor(modelItem => item.programmeDate)
                                </td>
                                <td class="hidden-xs">
                                    @if (item.programmeStatus == Commitee.Models.CommiteeProgramme.CommiteeProgrammeStatus.ACTIVE)
                                    {
                                        <span class="label label-warning-light">@item.programmeStatus</span>
                                    }
                                    else
                                    {
                                        <span class="label label-info">@item.programmeStatus</span>
                                    }

                                </td>
                                <td>
                                    <fieldset class="btn-group">
                                        <a href='@Url.Action("ChangeProgrammeStatus", "CommiteeProgrammes", new { id = item.id, status = Commitee.Models.CommiteeProgramme.CommiteeProgrammeStatus.PASSIVE })' class="btn btn-danger btn-outline btn-sm"><i class="fa fa-play"></i> Done </a>
                                        <a href="#" data-toggle="dropdown" class="btn btn-success btn-sm dropdown-toggle">
                                            <i class="fa fa-list"></i>
                                            <span>
                                                <strong>Actions</strong>
                                            </span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href='@Url.Action("ListItems", "CommiteeItems", new { id = item.id})'><i class="fa fa-list"></i> Details</a>
                                            </li>
                                            <li class="divider"></li>
                                            <li>
                                                <a href='@Url.Action("Edit", "CommiteeProgrammes", new { id = item.id })'><i class="fa fa-edit"></i> Edit </a>
                                            </li>
                                            <li class="divider"></li>
                                            <li>
                                                <a href='@Url.Action("Delete", "CommiteeProgrammes", new { id = item.id })'><i class="fa fa-trash"></i> Delete </a>
                                            </li>
                                        </ul>
                                    </fieldset>
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
